/* Code of tiktok tuto */ 

#include <stdio.h> /* printf, scanf */
#include <stdlib.h> /* Exit_success */
#include <time.h> /* rand */

#define MAX 100 /* definit la variable MAX à 100 */

int main(){
	srand(time(NULL));

	int choix; 
	int x = rand() % MAX + 1; /* Le chiffre/nombre généré au hasard entre 1 et MAX = 100 */
	do{ /* Boucle tant que l'utilisateur ne trouve pas le chiffre secret */
		printf("Donnez un nombre : ");
		scanf("%d", &choix); /* Affecte le nombre donné par l'utilisateur à la variable choix */
		if(choix<x) printf("Trop petit\n");
		if(choix>x) printf("Trog grand\n");
	}while(choix!=x);

	printf("Bien joué le chiffre secret était %d\n", x);

	return 0; /* Exit_Success */
}
